---
interface Props {
    extraClass?: string
    textColor?: string
    href?: string;
}

const { href = "#", textColor, extraClass} = Astro.props;

---

<a aria-label={`Ir a ${href}`} role="button" href={href}
  class="hover:scale-105 transition-all duration-300 relative inline-flex h-12 px-0.5 py-0.5 active:scale-95 transistion overflow-hidden rounded-lg p-[1px] focus:outline-none"
>
  <span
    class="absolute blur-lg inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#e7029a_0%,#f472b6_50%,#bd5fff_100%)]"
  >
  </span>
  <span
    class=`inline-flex h-full w-full text-white cursor-pointer items-center justify-center rounded-lg bg-slate-950 hover:bg-slate-900 px-7 text-sm font-medium text-[${textColor}] backdrop-blur-3xl gap-2 dark:text-[${textColor}] transition-all duration-300 ${extraClass}`
  >
  <slot/>
  </span>
</a>

