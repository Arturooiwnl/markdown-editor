---

import '@fontsource/audiowide';

import {description, siteName, imageMetaAlt} from './constLayout'

import '../styles/global.css';

import Header from '@/components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/icon.webp" />
	<meta name="description" content={description}/>
	<meta property="og:title" content={siteName} />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://studio.arturoiwnl.pro/" />
	<meta property="og:locale" content="es" />
	<meta property="og:description" content={description}/>
	<meta property="og:site_name" content={siteName} />
	<meta property="og:image" content="https://studio.arturoiwnl.pro/og/og-main.jpg" />
	<meta property="og:image:alt" content={imageMetaAlt} />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="@ArturoPerotto" />
	<meta name="twitter:title" content={siteName} />
	<meta name="twitter:description" content={description}/>
	<meta name="twitter:image" content="https://studio.arturoiwnl.pro/og/og-main.jpg" />
	<meta name="twitter:image:alt" content={imageMetaAlt} />
	<meta name="robots" content="max-image-preview:large" />
    <title>{title}</title>
</head>
<body class="relative bg-slate-950">
	<div class="fixed inset-0 -z-10 w-full min-h-screen bg-slate-950 ">
		<div class="absolute inset-0 bg-gray-950">
			<div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] bg-[radial-gradient(#374151_1px,transparent_1px  bg-[radial-gradient(#374151_1px,transparent_1px)] [background-size:16px_16px] opacity-30" />
			<div class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950" />
		  </div>
	</div>
	<main>
		<Header/>
		<slot />
	</main>
</body>
</html>

<script type="module">

import { animate, inView } from "https://cdn.jsdelivr.net/npm/motion@12.10.0/+esm"

const counters = document.querySelectorAll("#count");

const heroHeader = document.querySelector(".hero-header")

counters.forEach(counter => {
	inView(counter, () => {

		animate(0, 100, {
		duration: 2,
		ease: "circOut",
		onUpdate: (latest) => {
			counter.innerHTML = `${Math.round(latest)}%`;
		}
	});
	}, { once: true })
});

inView(heroHeader, () => {
	heroHeader.classList.add('sm:animate-fade-in-right')
  }, { once: true })

inView(".about-text", (element) => {
      element.classList.add('sm:animate-fade-in-right')
  }, { once: true })

inView(".mockup-big-hero", (element) => {
      element.classList.add('sm:animate-fade-in')
  }, { once: true })

inView(".mockup-small-hero", (element) => {
      element.classList.add('sm:animate-fade-in')
  }, { once: true })

inView(".navbar-content", (element) => {
      element.classList.add('sm:animate-fade-in')
  }, { once: true })

inView("#title-section", (element) => {
      element.classList.add('sm:animate-fade-in')
  }, { once: true })
inView(".footer", (element) => {
      element.classList.add('sm:animate-fade-in')
  }, { once: true })

inView(".carousel-tech", (element) => {
      element.classList.add('sm:animate-fade-in')
  }, { once: true })

  for (let i = 1; i <= 4; i++) {
	inView(`.about-item-${i}`, (el) => {
	el.classList.add('sm:animate-fade-in');
	}, { once: true });
	}

inView(".scroll-to-top", (el) => {
	el.classList.add('sm:animate-fade-in');
	}, { once: true });


for (let i = 1; i <= 6; i++) {
	inView(`.social-button-${i}`, (el) => {
	el.classList.add('sm:animate-fade-in');
	}, { once: true });
	}

for (let i = 1; i <= 4; i++) {
	inView(`.bento-el-${i}`, (el) => {
	el.classList.add('sm:animate-fade-in');
	}, { once: true });	
	}
for (let i = 1; i <= 3; i++) {
	inView(`.project-card-${i}`, (el) => {
	el.classList.add('sm:animate-fade-in');
	}, { once: true });	
	}
</script>

<style is:global>
	/* :root {
	  color-scheme: light dark;
	} */

	html {
	  font-family: system-ui, sans-serif;
	  scroll-behavior: smooth;
	}



	body {
	  color: rgba(17, 17, 17, 0.9);
	  display: flex;
	  flex-direction: column;
	  min-height: 100vh;
	  overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
	  html {
		scroll-behavior: auto;
	  }
	}

	/* @media (prefers-color-scheme: dark) {
	  body {
		color: rgba(255, 255, 255, 0.9);
	  }
	} */
</style>
