---
import {siteName} from './constLayout'

import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  heroImage: string;
  description: string;
}

const { title, heroImage, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/icon.webp" />
	<meta name="description" content={description}/>
	<meta property="og:title" content={siteName} />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://mdeditor.arturoiwnl.pro/" />
	<meta property="og:locale" content="es" />
	<meta property="og:description" content={description}/>
	<meta property="og:site_name" content={siteName} />
	<meta property="og:image" content={`https://mdeditor.arturoiwnl.pro/${heroImage}`} />
	<meta property="og:image:alt" content={description} />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="@ArturoPerotto" />
	<meta name="twitter:title" content={siteName} />
	<meta name="twitter:description" content={description}/>
	<meta name="twitter:image" content={`https://mdeditor.arturoiwnl.pro/${heroImage}`} />
	<meta name="twitter:image:alt" content={description} />
	<meta name="robots" content="max-image-preview:large" />
    <title>{title}</title>
</head>
<body class="relative bg-slate-950">
	<div class="fixed inset-0 -z-10 w-full min-h-screen bg-slate-950 ">
		<div class="absolute inset-0 bg-gray-950">
			<div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] bg-[radial-gradient(#374151_1px,transparent_1px  bg-[radial-gradient(#374151_1px,transparent_1px)] [background-size:16px_16px] opacity-30" />
			<div class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950" />
		  </div>
	</div>
	<main class="max-w-7xl">
		<slot />
	</main>
	<Footer actualPage='/editor'/>
</body>
</html>

<style is:global>

	.post-container{
		@apply max-w-7xl;
	}

    @reference "tailwindcss";

	.title-post{
		font-size: 2rem;
		text-align: center;
	}

	.footer{
		h2{
			font-size: small;
		}

		.footer-link{
			font-size: 16px;
			color: #acacac;


			&:hover{
				color: #ffffff;
			}

		}

		ul, ol{
			padding-left: 0%;
		}

		li {
			list-style: none;
		}

	}

	html {
	  font-family: system-ui, sans-serif;
	  scroll-behavior: smooth;
	}

	body {
	  color: rgba(17, 17, 17, 0.9);
	  display: flex;
	  flex-direction: column;
	  min-height: 100vh;
	  overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
	  html {
		scroll-behavior: auto;
	  }
	}

:root {
    --accent: #4f5055;
    --accent-dark: #000d8a;
    --black: 15, 18, 25;
    --gray: 96, 115, 159;
    --gray-light: 229, 233, 240;
    --gray-dark: 34, 41, 57;
    --gray-gradient: rgba(var(--gray-light), 50%), #fff;
    --box-shadow: 0 2px 6px rgba(var(--gray), 25%), 0 8px 24px rgba(var(--gray), 33%),
        0 16px 32px rgba(var(--gray), 33%);
    --content-width: min(100ch, 100% - 2rem);
}


main {
    width: var(--content-width);
    margin-inline: auto;
    padding: clamp(1rem, 5vw, 3rem);
}

h1, h2, h3, h4, h5, h6 {
    @apply text-gray-300 mb-4 font-bold tracking-tight;
    line-height: 1.2;
	text-align: center;
}

h1 { font-size: clamp(2.5rem, 5vw, 3.052rem); }
h2 { font-size: clamp(2rem, 4vw, 2.441rem); }
h3 { font-size: clamp(1.75rem, 3vw, 1.953rem); }
h4 { font-size: clamp(1.5rem, 2.5vw, 1.563rem); }
h5 { font-size: clamp(1.25rem, 2vw, 1.25rem); }
h6 { font-size: clamp(1rem, 1.5vw, 1.1rem); }

strong, b {
    @apply font-bold text-gray-200 ;
}

p {
    @apply text-gray-300 mb-4;
}

.prose p {
    margin-bottom: 1.5em;
}

textarea, input {
    @apply w-full text-base p-2 rounded-md border border-gray-700 ;
    font-family: inherit;
}

table {
    @apply w-full border-collapse mb-4;
}

th, td {
    @apply border border-gray-700  p-2 text-left;
}

code {
    @apply bg-gray-800 text-gray-200 px-1.5 py-0.5 rounded-md text-sm;
}

pre {
    @apply p-4 rounded-lg overflow-x-auto mb-4 bg-gray-800;
}

pre > code {
    @apply bg-transparent p-0 text-base;
}

blockquote {
    @apply border-l-4  pl-4 italic my-4 text-gray-300 ;
}

hr {
    @apply border-t-2 border-gray-700  my-8;
}

ul, ol {
    @apply pl-6 mb-4 space-y-2;
}

ul {
    @apply list-disc;
}

ol {
    @apply list-decimal;
}

li {
    @apply text-gray-300;
    > ul, > ol {
        @apply mt-2 mb-0;
    }
}

@media (max-width: 768px) {
    :root {
        --content-width: calc(100% - 2rem);
    }
    
    body {
        font-size: 16px;
    }

    main {
        padding: 1rem;
    }
}

.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

</style>